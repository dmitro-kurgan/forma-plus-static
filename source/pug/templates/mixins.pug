mixin icon(name, mod)
	- mod = mod || '' 
	svg(class='icon icon-' + name + ' ' + mod)
		use(xlink:href="../components/images/svg/symbol/sprite.svg#" + name)
			
mixin language()
	.language#language
		span.language__text язык:
		span(href="#").language__select рус
			ul
				li
					a(href="#") укр
				li
					a(href="#") eng